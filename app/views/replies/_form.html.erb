<%= form_with(model: reply) do |form| %>
  <% if reply.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(reply.errors.count, "error") %> prohibited this reply from being saved:</h2>

      <ul>
        <% reply.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :has_been_edited, style: "display: block" %>
    <%= form.check_box :has_been_edited %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_field :content %>
  </div>

  <div>
    <%= form.label :upvote_count, style: "display: block" %>
    <%= form.number_field :upvote_count %>
  </div>

  <div>
    <%= form.label :downvote_count, style: "display: block" %>
    <%= form.number_field :downvote_count %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
